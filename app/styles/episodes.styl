.episodes {
    .episode {
        box-sizing: border-box;
        border-bottom: 1px solid #bbb;
        cursor: pointer;
        display: block;
        height: 100%;
        height: 60px;
        padding: 5px;

        &:active {
            background: #dedede;
        }

        &.is-new {
            background: rgba(49, 49, 49, .1);
        }
    }

    .name {
        display: inline-block;
        float: left;
        line-height: 1.3em;
        padding: 10px 0 0 5px;
        width: 80%;
    }

    .actions {
        float: right;
        font-size: 20px;
        margin: 15px 20px 0 0;
        text-align: center;
    }
}
