<x-layout>
  <header>
    <x-appbar>
      <h1>{{t app.title}}</h1>
      {{outlet headerAction}}
    </x-appbar>
  </header>
  <section>
    {{outlet}}
  </section>
  <footer>
    <!-- We interact with this programatically for various reasons. -->
    <audio id="audio-player" preload="auto"></audio>

    {{render "player"}}

    <x-tabbar>
      <x-tabbar-tab>
        {{#link-to 'podcasts'}}{{t tabs.myPodcasts}}{{/link-to}}
      </x-tabbar-tab>

      {{!--
        Only show popular and search tabs (which require systemXHR) on
        platforms that can make cross-origin requests to get/parse the results.
      --}}
      {{#if HighFidelity.isPackaged}}
        <x-tabbar-tab>
          {{#link-to 'index'}}{{t tabs.popular}}{{/link-to}}
        </x-tabbar-tab>
        <x-tabbar-tab>
          {{#link-to 'search'}}{{t tabs.search}}{{/link-to}}
        </x-tabbar-tab>
      {{/if}}
    </x-tabbar>
  </footer>
</x-layout>
