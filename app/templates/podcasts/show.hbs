<div class="podcast-show ui grid">
  <div class="sixteen wide column">
    <h1 class="ui header">{{model.title}}</h1>
  </div>

  <div class="fourteen wide column centered center aligned podcast-cover">
    <img src={{model.coverImageURL}} alt={{model.title}}>
  </div>

  <div class="row">
    <div class="eight wide column center aligned">
      <button class="blue ui button" {{action "update"}}>Refresh</button>
    </div>
    <div class="eight wide column center aligned">
      <button class="negative ui button"
              {{action "delete"}}>Unsubscribe</button>
    </div>
  </div>

  <!-- <p>{{model.description}}</p> -->
</div>

{{render "episodes" controller.sortedEpisodes}}
