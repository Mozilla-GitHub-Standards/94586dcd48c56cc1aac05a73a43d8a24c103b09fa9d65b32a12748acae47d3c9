{{#if controller}}
  <ul class="my-podcasts">
    {{#each content=controller tagName=ul className="my-podcasts"}}
      <li>
        {{#link-to 'podcast' this class="cover"}}
          {{#if coverImage}}
            <img {{bind-attr src=coverImage}} {{bind-attr alt=title}}>
          {{else}}
            <span class="no-cover">{{title}}</span>
          {{/if}}
        {{/link-to}}
      </li>
    {{/each}}
  </ul>
{{else}}
  <div class="center">
    <h2>{{t podcast.noneFound}}</h2>
    <p>
      {{#link-to 'podcast.new'}}{{t podcast.addOne}}{{/link-to}}
    </p>
  </div>
{{/if}}

{{outlet}}
